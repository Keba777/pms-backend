{
  "name": "pms-backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc",
    "dev": "nodemon --exec ts-node ./src/server.ts",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "start": "node dist/server.js",
    "build:prod": "npm install typescript && NODE_ENV=production npx tsc",
    "migrate:prod": "NODE_ENV=production sequelize-cli db:migrate",
    "start:prod": "npm run build:prod && npm run migrate:prod && NODE_ENV=production node dist/server.js",
    "start:prod:pm2": "npm run build:prod && npm run migrate:prod && pm2 start dist/server.js --name pms-backend && pm2 save"
  },
