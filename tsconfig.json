{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2016",                                 
    "experimentalDecorators": true,                   
    "module": "commonjs",
    "moduleResolution": "node",                               
    "rootDir": "./src",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*", "src/types/**/*"]
}
